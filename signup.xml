<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_signup"
        android:background="@drawable/shape_under">
        <ImageButton
            android:id="@+id/btn_back2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="회원가입"
            android:textSize="20dp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입 정보"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="30dp"
        android:textColor="#000"
        android:textSize="25dp"
        android:id="@+id/info"
        android:layout_below="@id/ly_signup"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_id"
        android:layout_below="@id/info"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/sign_tv_id"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_tv_id">
            <EditText
                android:id="@+id/sign_edt_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:hint="10자리 내 입력"
                android:textSize="15dp"
                android:background="@drawable/shape_border2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:id="@+id/btn_vd"
                android:layout_marginLeft="10dp"
                android:text="중복확인"
                android:textSize="17dp"
                android:textColor="#fff"
                android:background="#8BC34A"
                android:clickable="true"
                android:onClick="btn_validate"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_pw"
        android:layout_below="@id/ly_id"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/sign_tv_pw"/>
        <EditText
            android:id="@+id/sign_edt_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="8자리 ~ 12자리 입력"
            android:textSize="15dp"
            android:layout_below="@id/sign_tv_pw"
            android:background="@drawable/shape_border2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_name"
        android:layout_below="@id/ly_pw"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/sign_tv_name"/>
        <EditText
            android:id="@+id/sign_edt_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:hint="10자리 내 입력"
            android:textSize="15dp"
            android:layout_below="@id/sign_tv_name"
            android:background="@drawable/shape_border2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_birth"
        android:layout_below="@id/ly_name"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생년월일 / 성별"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/sign_tv_birth"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sign_tv_birth">
            <EditText
                android:id="@+id/sign_edt_birth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:hint="8자리 입력(예. 19850101)"
                android:textSize="15dp"
                android:layout_below="@id/sign_tv_birth"
                android:inputType="number"
                android:digits="0123456789"
                android:background="@drawable/shape_border2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/sign_edt_birth"
                android:layout_below="@id/sign_tv_birth"
                android:background="@drawable/shape_border2"
                android:layout_weight="3">
                <Spinner
                    android:id="@+id/spinner_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_tel"
        android:layout_below="@id/ly_birth"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/sign_tv_tel"/>
        <EditText
            android:id="@+id/sign_edt_tel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:hint="숫자만 입력(예. 01012345678)"
            android:textSize="15dp"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_below="@id/sign_tv_tel"
            android:background="@drawable/shape_border2"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/ly_tel"
        android:text="회원가입"
        android:textSize="17dp"
        android:background="#8BC34A"
        android:clickable="true"
        android:onClick="btn_signup"
        android:textColor="#fff"/>
</RelativeLayout>